<div id="container">

    <div class="row">
        <h1>Eat Da Burger</h1>
    </div>

    <div class="row">
        <img src="../public/assets/css/img/burger.jpg" alt="burger" class"imgBurger">
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                {{Devoured}}
                <li>
                    <button type='submit' class="btn btn-default">Devour it</button>
                </li>
                {{/each}}

        </div>
    </div><br>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers You've Devoured</h3>
            <ul>
                {{#each burgers}}
                {{Devoured}}
                <li>

                </li>
                {{/each}}
            </ul>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12" id="mainBurger">
            <form>
                <div class="form-group">
                    <input type="text" name="name">
                    <button class="btn btn-default" type="submit">Submit</button>
                    <h4>Insert the burger you'd like to add to eat</h4>
                </div>
            </form>
        </div>
    </div>
</div>



















