<div id="container">

    <div class="row" id="img">
        <h1>Eat Da Burger</h1>
    </div>

    
        <img src="/assets/css/img/burger.jpg" alt="burger" class"imgBurger">
   

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type='submit' class="btn btn-default">{{this.burger_name}}</button>
                    </form>
                </li>
                {{/if}}
                {{/each}}

        </div>
    </div><br>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers You've Devoured</h3>

            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
                {{this.burger_name}}
            </div>
            {{/unless}}
            {{/each}}


        </div>
    </div>



    <div class="row">
        <div class="col-md-12" id="mainBurger">
            <form>
                <div class="form-group">
                    <form action="/burgers" method="POST">
                    <input type="text" name="name">
                    <button class="btn btn-default" type="submit">Add Burger</button>
                    </form>
                    <h4>Insert the burger you'd like to add to eat</h4>
                </div>
            </form>
        </div>
    </div>
</div>